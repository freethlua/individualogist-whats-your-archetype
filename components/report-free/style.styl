.container
  position: relative

.header
  margin: .5em auto
  position: absolute
  width: 100%
  z-index: 2
  .img
    display: block
    margin: auto
    width: 200px
    max-width: 90%
    @media(max-width:400px)
      max-width: 50%
  .compatibility &
    bottom 0

.content
  position: relative
  height: 100%
  background-position: 50% 0
  background-size: cover
  margin-bottom: 10em

.content:after
  content: ' '
  display: block
  width: 100%
  height .5em
  background-image: linear-gradient(to right, #6A2977, #009ED5)
  position: absolute
  bottom: 0px

for currentPercent in (1..100)
  .current-percent-currentPercent:before
    z-index: 3
    transition: 1000ms
    content ' '
    // border 2px dotted yellow
    width: 1% * currentPercent
    display: block
    height 2px
    background: white
    // background-image: linear-gradient(to right, #6A2977, #009ED5)
    position: absolute
    top: 0
    // bottom: -10em

.slider
  display: flex
  flex-direction: column
  .image
    order: -1

.text
  border: 3px dotted yellow
  position: absolute
  top: 0
  z-index: 1

  &
  *
    width: 100%
    height: 100%

  width: 80% !important
  margin-left: 10% !important
  width: 50% !important
  margin-left: 25% !important

  text-align: center

  font-size: 1.2em
  line-height: 1.5em

  color white
  text-shadow:
    0 0 10px black,
    3px 6px 5px black,
    0px 2px 5px black,
    0 0 20px white

  .markup
    display: flex
    flex-flow: column
    justify-content: center


  .compatibility &
    position: relative
    .markup
      justify-content: flex-start
    @media(min-width:800px)
      @media(max-aspect-ratio:16/10)
        position: absolute
        .markup
          justify-content: center




.image
  position: relative
  text-align: center
  .foreground
    opacity: .7
    width: 100%
    height: 100%
    .compatibility &
      height: auto

    display: flex
    flex-flow: column
    justify-content: center
    align-items: center
    // .compatibility &
    //   align-items: flex-start

    .img
      max-width: 100%
      .compatibility &
        max-width: 100%
        @media(max-width:800px)
          max-width: 800px
        @media(max-width:500px)
          max-width: 150%
          margin-left: -25%


.play-pause
  position: absolute
  top:50vh
  left:50vw
  margin-left: -2.5vw
  margin-top: -2.5vw
  filter: drop-shadow(0 0 3px white)
  z-index: 2
  cursor: pointer
  width: 0
  height: 0
  border-top: 2em solid transparent
  border-left: 3em solid #000
  border-bottom: 2em solid transparent
  &:not(.visible)
    display: none


a.button
  text-decoration: none

.action-1
  border-radius: 50px
  background: linear-gradient(to right, #863981, #CA2D82)
  box-shadow: 20px 20px 20px rgb(0,0,0,.4)
  width: 80%
  max-width: 1000px
  height 13em
  // height 20vw
  align-items: flex-end
  margin: auto
  display: flex
  position: relative
  padding: 1em
  > .img
    width: 40%
    height: auto
    @media(max-width:650px)
      display: none
  > .div
    margin-left: -4em
    margin-left: -10%
    width: 60%
    @media(max-width:650px)
      width: 100%
      margin-left: 0

    font-size: 2em
    @media(max-width:900px)
      font-size: 1.8em

    > .p
      color white
      text-shadow: 0 0 3px black, 0 0 5px white, 2px 2px 3px black
    text-align: center
    > a .button
      cursor: pointer
      text-shadow: 0 0 3px white
      font-size: 1.3em
      // font-size: 1.3vh
      background: linear-gradient(to right, #E4C22C, #F8B144)
      border-radius: 50px
      box-shadow: 10px 10px 10px rgb(0,0,0,.4)
      padding .5em
      @media(max-width:1000px)
        padding .1em
      &:active
        box-shadow: 0 0 10px rgb(0,0,0,.4)
      @media(max-width:1068px)
        font-size: .8em
        padding .2em .5em
        margin-bottom: 1em



.testimonial
  margin: 10vh auto
  display: flex
  align-items: center
  justify-content: space-around
  text-align: center
  > *
    width 100%
    max-width 100% !important
  .p
    font-size: 2em
    // @media(min-width:900px)
    @media(min-width:900px)
      width: 50%
    // @media(min-width:400px)
    //   padding 1em
  .youtube
    margin: 1em
    // flex-shrink: 2
    @media(min-width:900px)
      width: 60%
    iframe
      max-width 100% !important
  @media(max-width:900px)
    flex-direction: column



.action-2
