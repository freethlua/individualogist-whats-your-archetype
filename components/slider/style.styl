.container
  // position: relative
  border: 1px dotted transparent

.header
  margin: 1em auto
  .img
    display: block
    margin: auto
    width: 200px
    max-width: 90%
    @media(max-width:400px)
      max-width: 50%

.content
  // > *
  //   border: 1px dotted
  height: 96vh

.text
  z-index: 1
  @media(max-width:400px)
    margin: 3em 1em
  @media(min-width:400px)
    font-size: 2em
  @media(min-width:1200px)
    font-size: 3em
    margin: auto 3em
  @media(max-width:1200px)
    max-width: 600px
  position: absolute
  color white
  text-shadow: 0 0 3px  black
  margin-left: 1em
  @media(min-height:500px)
    top: 3em

.image
  z-index: -1
  .background
    z-index: -2
    position: absolute
    left: 0
    top: 0
    img
      // position: relative
      // left: 50%
      // display: block
      // object-fit: contain
      // max-width:100%
      // max-height:100%
      // height: 100%
      height: 98vh
      // width: 100%
      // overflow: hidden
    filter: blur(3px)
  .foreground
    position: absolute
    @media(min-width:500px)
      right: 1em
    bottom: 1em
    filter: drop-shadow(0 0 15px black)
    img
      max-width: 90%


.play-pause
  position: absolute
  top:50vh
  left:50vw
  margin-left: -2.5vw
  margin-top: -2.5vw
  filter: drop-shadow(0 0 3px white)
  z-index: 2
  cursor: pointer
  width: 0;
  height: 0;
  border-top: 2em solid transparent;
  border-left: 3em solid #000;
  border-bottom: 2em solid transparent;
  &:not(.visible)
    display: none

.content:after
  content: ' '
  display: block
  width: 100%
  height .5em
  background-image: linear-gradient(to right, #6A2977, #009ED5)
  position: absolute
  bottom: 0


