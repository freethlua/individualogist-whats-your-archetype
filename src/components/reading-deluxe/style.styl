
.action-1
  border-radius: 50px
  background: linear-gradient(to right, #863981, #CA2D82)
  // background: linear-gradient(to right, rgba(134,57,129, .8), rgba(202,45,130,.9))
  // background: linear-gradient(to right, #111, #fff)
  // box-shadow: 20px 20px 20px rgb(0,0,0,.4)
  box-shadow: 10px 15px 20px rgba(0, 0, 0, 0.75)
  // border: 3px dotted yellow
  width: 80%
  max-width: 1000px
  height 13em
  // height 20vw
  align-items: flex-end
  margin: auto
  display: flex
  position: relative
  padding: 1em
  > .img
    pointer-events: none
    img
      width: 50%
      height: auto
    @media(max-width:650px)
      display: none
    filter: drop-shadow(0 0 5px white) drop-shadow(2.5px 5px 15px black)
  > .div
    margin-left: -4em
    margin-left: -10%
    width: 60%
    @media(max-width:650px)
      width: 100%
      margin-left: 0

    font-size: 2em
    @media(max-width:900px)
      font-size: 1.8em

    > .p
      color white
      text-shadow: 0 0 3px black, 0 0 5px white, 2px 2px 3px black
    text-align: center
    > a .button
      cursor: pointer
      text-shadow: 0 0 3px white
      font-size: 1.3em
      font-weight: 700
      color: #222
      // font-size: 1.3vh
      background: linear-gradient(to right, #E4C22C, #F8B144)
      border-radius: 50px
      box-shadow: 10px 10px 10px rgb(0,0,0,.4)
      padding .5em
      @media(max-width:1000px)
        padding .1em
      &:active
        box-shadow: 0 0 10px rgb(0,0,0,.4)
      @media(max-width:1068px)
        font-size: .8em
        padding .2em .5em
        margin-bottom: 1em



