@import './progress-bar.styl'


.wrapper
  color white
  background-image: url('../../assets/images/backgrounds/quiz-slider-1.jpg')
  background-position: 50% 0
  background-size: cover
  padding-top: 50px
  padding-bottom: 100px
  background-attachment: fixed


.h1
  text-shadow: 5px 5px 5px rgb(0,0,0,.4)
  text-align: center
  font-size: 2em
  font-weight: bold
  .color
    color: #F72BF7

.container
  max-width: 900px
  margin: auto

.intro
  text-align: center
  width: 100%
  display: flex
  // align-self: stretch
  justify-content: space-around
  // margin: 1em 0
  > .p:before
    display: block
    text-align: center
    font-size: 5em

.form
  // border: 2px dotted black
  width: 100%
  display: flex
  flex-direction: column
  > *
    margin: 1em auto

.li
  display: flex
  flex-direction: column
  margin: 1em

.question
  display: flex
  flex-direction: column
  background: #E8E8E8
  font-weight: bold

  .question
    align-self: center
    text-align: center
    color: black
    padding: .5em 10%
    font-size: 1.5em

.answer
  display: block
  // border: 2px dotted red
  background: #E8E8E8
  font-weight: bold
  margin: 1em auto
  padding: 1em auto
  color: black
  .input
    margin: 1em


.ol
  // border: 2px dotted red
  position: relative
  // height: 30em
.li
  transition:opacity 1000ms
  position: absolute
  width: 96%
  &:not(.visible)
    opacity: 0
    visibility: hidden
  &.visible
    opacity: 1
    z-index: 2
    .answer:hover
      cursor: pointer
      background: #FFF195

.ol, .ul
  margin: 0
  padding: 0
  list-style: none inside
  // margin-bottom: 7.5em

.li .order
  display: none
  padding-right: .5em
  // font-size: .9em
  font-family: monospace
  &:after
    content: ':'



